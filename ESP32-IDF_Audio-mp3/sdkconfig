# ESP32-C3 MP3 Streamer Configuration

# Target configuration
CONFIG_IDF_TARGET="esp32c3"

# WiFi Configuration
CONFIG_ESP_WIFI_SSID="YOUR_WIFI_SSID"
CONFIG_ESP_WIFI_PASSWORD="YOUR_WIFI_PASSWORD"

# HTTP Client
CONFIG_ESP_HTTP_CLIENT_ENABLE_HTTPS=y

# Memory optimization
CONFIG_SPIRAM=n
CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=4096
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# Compiler options - optimize for performance
CONFIG_COMPILER_OPTIMIZATION_PERF=y

# FreeRTOS - increase tick rate for better audio timing
CONFIG_FREERTOS_HZ=1000

# I2S
CONFIG_I2S_ENABLE_DEBUG_LOG=n

# Log level - reduce to WARNING to minimize overhead
CONFIG_LOG_DEFAULT_LEVEL_WARN=y
CONFIG_BOOTLOADER_LOG_LEVEL_WARN=y